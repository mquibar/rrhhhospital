<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ProyectoHotelPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source>hospitalJNDI</non-jta-data-source>
    <class>Entidades.Agrupamiento</class>
    <class>Entidades.AsignacionHorario</class>
    <class>Entidades.Cargo</class>
    <class>Entidades.Categoria</class>
    <class>Entidades.Clase</class>
    <class>Entidades.ClaseContenida</class>
    <class>Entidades.ClaseVigente</class>
    <class>Entidades.Domicilio</class>
    <class>Entidades.Empleado</class>
    <class>Entidades.Licencia</class>
    <class>Entidades.Localidad</class>
    <class>Entidades.Pais</class>
    <class>Entidades.Persona</class>
    <class>Entidades.Profesional</class>
    <class>Entidades.Provincia</class>
    <class>Entidades.PuestoJerarquico</class>
    <class>Entidades.RegistroReloj</class>
    <class>Entidades.Requisito</class>
    <class>Entidades.Sexo</class>
    <class>Entidades.Tarjeta</class>
    <class>Entidades.TipoCarga</class>
    <class>Entidades.TipoEmpleado</class>
    <class>Entidades.TipoHorario</class>
    <class>Entidades.TipoLicencia</class>
    <class>Entidades.TipoRegistro</class>
    <class>Entidades.Tramo</class>
    <class>Entidades.CargaManual</class>
    <class>Entidades.CargaSistematica</class>
    <class>Entidades.RegistroEntrada</class>
    <class>Entidades.RegistroSalida</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://192.168.0.100:5432/hospitaltest"/>
      <property name="hibernate.connection.username" value="proyectoutn"/>
      <property name="hibernate.connection.password" value="hospital"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.c3p0.wait_timeout" value="1"/>
      <!--
      <property name="hibernate.c3p0.max_size" value ="15"/>
      <property name="hibernate.c3p0.min_size" value="3"/>-->
      <!--<property name="hibernate.show_sql" value="true"/-->
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
